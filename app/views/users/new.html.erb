<form method='post' action='/users/new' accept-charset="UTF-8">
  <input type='hidden' name='authenticity_token_value' value='<%= form_authenticity_token %>'>
  <label class='string required' for='username'>Username:</label>
  <input type='text' name='username' id='username' placeholder='Username'>
  
  <label class='string required' for='email'>Email:</label>
  <input type='text' name='email' id='email' placeholder='foo@example.com'>

  <label class='string required' for='password'>Password:</label>
  <input type='password' id='password' name='password'>

  <input type='submit' name='submit' value='Create User'>
</form>